    err = model.Delete(id)
    {%- else -%}
    id := mux.Vars(r)["id"]
    err := model.Delete(id)
    {%- endif -%}
    if err != nil {
        log.Println("Delete {%v config.Database.Table.Name.CamelCase() %} failed", err)
        w.WriteHeader(http.StatusInternalServerError)
        _, _ = w.Write([]byte(err.Error()))
        return
    } else {
        log.Println("{%v config.Database.Table.Name.PascalCase() %} id", id, "deleted")
        w.WriteHeader(http.StatusNoContent)
    }
