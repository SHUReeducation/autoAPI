{% import "autoAPI/config" %}
{% import typeTransformer "autoAPI/generator/apiGenerator/golang/typeTransformer" %}

{% func Handler(config config.Config) %}
package handler

import (
    "{%v config.Database.Table.Name.CamelCase() %}/model"
    "encoding/json"
    "io/ioutil"
    "log"
    "net/http"
    "strconv"
    "github.com/gorilla/mux"
)

func PostHandler(w http.ResponseWriter, r *http.Request) {
    w.Header().Add("Content-Type", "application/json")
    body, _ := ioutil.ReadAll(r.Body)
    var toCreate model.{%v config.Database.Table.Name.PascalCase() %}
    _ = json.Unmarshal(body, &toCreate)
    result, err := model.Create(toCreate)
    if err != nil {
        log.Println("Create {%v config.Database.Table.Name.PascalCase() %} failed:", err)
        w.WriteHeader(http.StatusInternalServerError)
        _, _ = w.Write([]byte(err.Error()))
        return
    } else {
        log.Println("{%v config.Database.Table.Name.PascalCase() %}", result, "created")
    }
    response, err := json.Marshal(result)
    w.WriteHeader(http.StatusCreated)
    _, _ = w.Write(response)
}

func GetHandler(w http.ResponseWriter, r *http.Request) {
    w.Header().Add("Content-Type", "application/json")
    {%- if typeTransformer.TypeTransformer.Transform(config.Database.Table.PrimaryKeyType()) == "int64" -%}
    idStr := mux.Vars(r)["id"]
    id, err := strconv.ParseInt(idStr, 10, 64)
    if err != nil {
        w.WriteHeader(http.StatusBadRequest)
        return
    }
    {%- else -%}
    id := mux.Vars(r)["id"]
    {%- endif -%}
    object, err := model.Get(id)
    if err != nil {
        w.WriteHeader(http.StatusNotFound)
        return
    }
    resp, _ := json.Marshal(object)
    _, _ = w.Write(resp)
}

func ScanHandler(w http.ResponseWriter, r *http.Request) {
    w.Header().Add("Content-Type", "application/json")
    limitStr := r.URL.Query().Get("limit")
    limit, err := strconv.ParseUint(limitStr, 10, 64)
    if err != nil {
        log.Println("Scan {%v config.Database.Table.Name.PascalCase() %} failed:", err)
        w.WriteHeader(http.StatusBadRequest)
        _, _ = w.Write([]byte(err.Error()))
        return
    }
    offsetStr := r.URL.Query().Get("offset")
    offset, err := strconv.ParseUint(offsetStr, 10, 64)
    if err != nil {
        log.Println("Scan {%v config.Database.Table.Name.PascalCase() %} failed:", err)
        w.WriteHeader(http.StatusBadRequest)
        _, _ = w.Write([]byte(err.Error()))
        return
    }
    result, err := model.Scan(offset, limit)
    if err != nil {
        log.Println("Scan {%v config.Database.Table.Name.PascalCase() %} failed:", err)
        w.WriteHeader(http.StatusInternalServerError)
        _, _ = w.Write([]byte(err.Error()))
        return
    }
    var body []byte
    if len(result) != 0 {
        body, _ = json.Marshal(result)
    } else {
        body = []byte("[]")
    }
    _, _ = w.Write(body)
}

