func DeleteHandler(w http.ResponseWriter, r *http.Request) {
    w.Header().Add("Content-Type", "application/json")
    {%- if typeTransformer.TypeTransformer.Transform(config.Database.Table.PrimaryKeyType()) == "int64" -%}
    idStr := mux.Vars(r)["id"]
