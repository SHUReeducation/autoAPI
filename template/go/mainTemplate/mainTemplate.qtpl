{% import "autoAPI/config" %}

{% func MainTemplate(config config.Config) %}
package main

import (
    "log"
    "{%v config.Database.Table.Name.CamelCase() %}/handler"
    "net/http"
    "github.com/gorilla/mux"
)

func main() {
    r := mux.NewRouter()
    r.HandleFunc("/ping", handler.PingPongHandler)
    r.HandleFunc("/{%v config.Database.Table.Name.KebabCase() %}s", handler.PostHandler).Methods("POST")
    r.HandleFunc("/{%v config.Database.Table.Name.KebabCase() %}s/{id:[0-9]+}", handler.GetHandler).Methods("GET")
    r.HandleFunc("/{%v config.Database.Table.Name.KebabCase() %}s", handler.ScanHandler).Queries("limit", "{limit}").Queries("offset", "{offset}").Methods("GET")
    r.HandleFunc("/{%v config.Database.Table.Name.KebabCase() %}s/{id:[0-9]+}", handler.PutHandler).Methods("PUT")
    r.HandleFunc("/{%v config.Database.Table.Name.KebabCase() %}s/{id:[0-9]+}", handler.DeleteHandler).Methods("DELETE")
    {% for _, complex := range config.Database.Table.Complex %}
    r.HandleFunc("/{%v config.Database.Table.Name.KebabCase() %}s/{id:[0-9]+}/{%v complex.Name.KebabCase() %}", handler.{%v complex.Name.PascalCase() %}Handler,
        ){% for _, param := range complex.Params %}{% if param.Name != nil %}.Queries("{%v param.Name.SnakeCase() %}", "{{%v param.Name.SnakeCase() %}}"){% endif %}{% endfor %}.Methods("GET")
    {% endfor %}
    err := http.ListenAndServe(":8000", r)
    if err != nil {
    	log.Fatal("ListenAndServe: ", err)
    }
}
{% endfunc %}